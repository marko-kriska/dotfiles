alt + w
    	firefox

alt + Return
	kitty -e fish

alt + shift + Return
	nemo

alt + p 
	rofi -show drun

alt + Print
	flameshot gui

alt + ctrl + p
	rofi-pass	

alt + ctrl + r
	rofi-beats-linux

alt + q
	bspc node -c

alt + m
	bspc desktop -l next

alt + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

ctrl + alt + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

ctrl + alt + shift + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

alt + shift + r
	bspc wm -r

alt + shift + q
	bspc quit

alt + Escape
	pkill -USR1 -x sxhkd

XF86AudioRaiseVolume  
	pactl set-sink-volume 0 +2%
XF86AudioLowerVolume    
	pactl set-sink-volume 0 -2%
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86MonBrightnessUp
	xbacklight -inc 10%
XF86MonBrightnessDown
	xbacklight -dec 10%
