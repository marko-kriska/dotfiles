alt + w
    	firefox

alt + Return
	alacritty

alt + shift + Return
	pcmanfm

alt + p 
	rofi -show drun

alt + Print
	scrot -s

alt + ctrl + p
	rofi-pass	

alt + ctrl + r
	rofi-beats-linux

alt + ctrl + s
	steam.sh

alt + ctrl + d
	monitor.sh

alt + ctrl + m
	alacritty --class pulsemixer,pulsemixer -e pulsemixer

alt + q
	bspc node -c

alt + m
	bspc desktop -l next

alt + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

alt + {_,shift} + Tab
    bspc desktop -f {next,prev}.local

alt + period 
    bspc monitor -f next

alt + comma 
    bspc monitor -f prev

alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

alt + ctrl + space
	bspc node -p cancel

alt + shift + r
	bspc wm -r

alt + shift + q
	bspc quit

alt + Escape
	pkill -USR1 -x sxhkd

alt + F12
	xsecurelock -- systemctl suspend -i

XF86AudioRaiseVolume  
	pactl set-sink-volume 0 +2%
XF86AudioLowerVolume    
	pactl set-sink-volume 0 -2%
XF86AudioMute
	pactl set-sink-mute 0 toggle
XF86AudioMicMute
	pactl set-source-mute @DEFAULT_SOURCE@ toggle
XF86MonBrightnessUp
	xbacklight -inc 10%
XF86MonBrightnessDown
	xbacklight -dec 10%
